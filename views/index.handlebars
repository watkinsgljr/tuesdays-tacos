    <div class="menu item">


      <button class="item2 beef" data-id="1">Beef</button>
      <button class="item2 chicken" data-id="2">Chicken</button>
      <button class="item2 veggie" data-id="3">Veggie</button>
      <button class="item2 vegan" data-id="4">Vegan</button>
      <button class="item2 drink" data-id="5">Drink</button>



    </div>

    <div class="order-form-wrapper item">

      <div class="order-form">


        <div class="order-input-grid-container">
          <div class="item3 heading1">Pick a Shell</div>
          <div class="item3 heading2">Select Your Veggies</div>
          <div class="item3 heading3">Select Cheese and Sauce</div>


          <div class="item3 shell-inputs">
            <p class="selection-lables">Taco</p>

            <div class="btn-group selection btn-group-toggle shell" data-shell="" data-toggle="buttons">
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="shell" class="hard" autocomplete="off"> HARD
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="shell" class="soft" autocomplete="off"> SOFT
              </label>
            </div>

            <p class="selection-lables">Taco Type</p>

            <div class="btn-group selection btn-group-toggle shell_type" data-shell-type="" data-toggle="buttons">
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="shell_type" class="flour" autocomplete="off"> FLOUR
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="shell_type" class="corn" autocomplete="off"> CORN
              </label>
            </div>



          </div>


          <div class="item3 veggie-inputs">
            <p class="selection-lables">Lettuce</p>

            <div class="btn-group selection btn-group-toggle lettuce" data-lettuce="test" data-toggle="buttons">
              <label class="btn btn-primary selection-btn" style="width: .5rem !important">
                <input type="radio" name="lettuce" class="none" autocomplete="off"> NONE
              </label>
              <label class="btn btn-primary selection-btn" style="width: .5rem !important">
                <input type="radio" name="lettuce" class="light" autocomplete="off"> LIGHT
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="lettuce" class="reg" autocomplete="off"> REG
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="lettuce" class="xtra" autocomplete="off"> XTRA
              </label>
            </div>

            <p class="selection-lables">Tomatoes</p>


            <div class="btn-group selection btn-group-toggle tomatoes" data-tomatoes="" data-toggle="buttons">
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="tomatoes" class="none" autocomplete="off" checked> NONE
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="tomatoes" class="light" autocomplete="off"> LIGHT
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="tomatoes" class="reg" autocomplete="off"> REG
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="tomatoes" class="xtra" autocomplete="off"> XTRA
              </label>
            </div>

            <p class="selection-lables">Onion</p>

            <div class="btn-group selection btn-group-toggle onion" data-onion="" data-toggle="buttons">
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="onion" class="none" autocomplete="off"> NONE
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="onion" class="light" autocomplete="off"> LIGHT
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="onion" class="reg" autocomplete="off"> REG
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="onion" class="xtra" autocomplete="off"> XTRA
              </label>
            </div>


          </div>

          <div class="item3 other-inputs">

            <p class="selection-lables">Cheese</p>

            <div class="btn-group selection btn-group-toggle cheese" data-cheese="" data-toggle="buttons">
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="cheese" class="none" autocomplete="off"> NONE
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="cheese" class="light" autocomplete="off"> LIGHT
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="cheese" class="reg" autocomplete="off"> REG
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="cheese" class="xtra" autocomplete="off"> XTRA
              </label>
            </div>

            <p class="selection-lables">Taco Sauce</p>


            <div class="btn-group selection btn-group-toggle sauce" data-sauce="" data-toggle="buttons">
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="sauce" class="none" autocomplete="off"> NONE
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="sauce" class="light" autocomplete="off"> MILD
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="sauce" class="reg" autocomplete="off"> HOT
              </label>
              <label class="btn btn-primary selection-btn">
                <input type="radio" name="sauce" class="xtra" autocomplete="off"> FIRE
              </label>
            </div>


          </div>
          <div class="item3 special-instructions">

            <div class="form-group shadow-textarea">
              <label for="exampleFormControlTextarea6">Special Instructions</label>
              <textarea class="form-control z-depth-1" id="exampleFormControlTextarea6" rows="3"
                placeholder="Write something here..."></textarea>
            </div>


          </div>

          <div class="item3 order-btn-wrapper">
            <button class="order-btn btn peach-gradient add-item-to-order">Add to Order</button>
            <button class="order-btn btn peach-gradient submit-order">Submit Order</button>
          </div>
        </div>
      </div>


    </div>
  </div>



  <div class="toast added-toast" style="position: absolute; top: 0; right: 0;" data-delay="3000" role="alert"
    aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <img src="" class="rounded mr-2" alt="">
      <strong class="mr-auto">Added</strong>
      <small></small>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="added-toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      An item was added to the cart!
    </div>
  </div>

  <div class="toast submitted-toast" style="position: absolute; top: 0; right: 0;" data-delay="3000" role="alert"
    aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <img src="..." class="rounded mr-2" alt="...">
      <strong class="mr-auto">Order Submitted</strong>
      <small></small>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Order had been submitted and is on its way!
    </div>
  </div>

  <div class="toast completed-toast" style="position: absolute; top: 0; right: 0;" data-delay="3000" role="alert"
    aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <img src="..." class="rounded mr-2" alt="...">
      <strong class="mr-auto">Order Completed</strong>
      <small></small>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Customer had received their order!
    </div>
  </div>


  <div class="toast deleted-toast" style="position: absolute; top: 0; right: 0;" data-delay="3000" role="alert"
    aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <img src="..." class="rounded mr-2" alt="...">
      <strong class="mr-auto">Order Deleted</strong>
      <small></small>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      Order has been deleted!
    </div>
  </div>




</div>