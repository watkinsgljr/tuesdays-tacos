

<div class="card" style="padding-top: .5rem !important" id="{{id}}">
    <div class="card-body2" style="padding: .5rem !important">
        <h6 class="order-number">{{id}}<span class="time-ordered">{{time_ordered}}</span></h6>
        <h6 class="card-subtitle mb-2 text-muted customer-name">{{customer}}</h6>
        
        {{#each description}}

        {{> orderDescription/orderDescription}}

        {{/each}}

        <button href="#" class="btn btn-primary btn-sm card-completed">Completed</button>
        <button href="#" class="btn btn-primary btn-sm delete-card">Delete</button>
    </div>
</div>